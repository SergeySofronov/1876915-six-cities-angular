/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@app/const": ["./src/app/app.const.ts"],
      "@app/store": ["./src/app/store/index.ts"],
      "@app/utils": ["./src/app/utils/index.ts"],

      "@core/models": ["src/app/core/models/index.ts"],
      "@core/services": ["./src/app/core/services/index.ts"],
      "@core/interceptors": ["./src/app/core/interceptors/index.ts"],
      "@core/layout": ["./src/app/core/layout/layout.component.ts"],
      "@core/auth/services": ["./src/app/core/auth/services/index.ts"],
      "@core/auth/guards": ["./src/app/core/auth/guards/index.ts"],

      "@shared/components": ["./src/app/shared/components/index.ts"],
      "@shared/directives": ["./src/app/shared/directives/index.ts"],
      "@shared/services": ["./src/app/shared/services/index.ts"],
      "@shared/models": ["./src/app/shared/models/index.ts"],
      "@shared/pipes": ["./src/app/shared/pipes/index.ts"],

      "@features/main/components": ["./src/app/features/main/components/index.ts"],
      "@features/main/pages": ["./src/app/features/main/pages/index.ts"],
      "@features/main/services": ["./src/app/features/main/services/index.ts"],
      "@features/main/models": ["./src/app/features/main/models/index.ts"],

      "@features/favorites/components": ["./src/app/features/favorites/components/index.ts"],
      "@features/favorites/pages": ["./src/app/features/favorites/pages/index.ts"],
      "@features/favorites/services": ["./src/app/features/favorites/services/index.ts"],
      "@features/favorites/models": ["./src/app/features/favorites/models/index.ts"],

      "@features/login/components": ["./src/app/features/login/components/index.ts"],
      "@features/login/pages": ["./src/app/features/login/pages/index.ts"],
      "@features/login/services": ["./src/app/features/login/services/index.ts"],
      "@features/login/models": ["./src/app/features/login/models/index.ts"],

      "@features/places/components": ["./src/app/features/places/components/index.ts"],
      "@features/places/pages": ["./src/app/features/places/pages/index.ts"],
      "@features/places/services": ["./src/app/features/places/services/index.ts"],
      "@features/places/models": ["./src/app/features/places/models/index.ts"],
    },
    "lib": ["DOM", "ES2024"],
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
